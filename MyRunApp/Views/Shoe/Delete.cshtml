@model Shoe
@{
    ViewBag.Title = "Delete Shoe";
}
<h2>Confirm Deletion</h2>
<h3>@Model.Brand (@Model.Name)</h3>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ShoeId" />
    <button type="submit" class="btn btn-primary">Delete</button> <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>